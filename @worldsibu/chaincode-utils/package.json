{
  "name": "@worldsibu/chaincode-utils",
  "version": "2.2.1",
  "description": "Chaincode utils for Typescript",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/*",
    "client/*"
  ],
  "license": "ISC",
  "scripts": {
    "clean": "rimraf dist",
    "clean:docs": "rimraf docs",
    "build": "npm run clean && tsc",
    "prepare": "npm run build",
    "lint": "tslint --fix -c '../../tslint.json' -p './tsconfig.json'",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts --reporter spec",
    "watch": "npm-scripts-watcher",
    "predocs:generate": "npm run clean:docs",
    "docs:generate": "typedoc src --out docs --target ES6 --excludePrivate",
    "docs:serve": "http-server docs"
  },
  "dependencies": {
    "@theledger/fabric-chaincode-utils": "^1.1.3",
    "reflect-metadata": "^0.1.12",
    "tslib": "^1.9.0",
    "yup": "^0.24.1"
  },
  "devDependencies": {
    "mocha": "^5.0.3",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.3",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  }
}
