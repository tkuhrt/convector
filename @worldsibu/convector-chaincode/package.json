{
  "name": "@worldsibu/convector-chaincode",
  "version": "1.0.0-0",
  "description": "Convector base chaincode to use in conjunction with controllers and models",
  "license": "ISC",
  "main": "./dist/src/index.js",
  "typings": "./dist/src/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "start": "node ./start.js",
    "------------ STANDARD TASKS ------------": "",
    "clean": "rimraf dist",
    "clean:docs": "rimraf docs",
    "build": "npm run clean && tsc",
    "copy:npmrc": "cp ../../npmrc dist/.npmrc",
    "lint": "tslint --fix -c '../../tslint.json' -p './tsconfig.json'",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts --reporter spec",
    "prepare": "npm run build",
    "predocs:generate": "npm run clean:docs",
    "docs:generate": "typedoc src --out docs --target ES6 --excludePrivate",
    "docs:serve": "http-server docs"
  },
  "peerDependencies": {
    "@worldsibu/convector-base-storage": ">=0.0.1",
    "@worldsibu/convector-controller": ">=0.0.1",
    "@worldsibu/convector-stub-storage": ">=0.0.1"
  },
  "dependencies": {
    "@theledger/fabric-chaincode-utils": "^2.0.9",
    "@worldsibu/convector-errors": "^1.0.0-0",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@worldsibu/convector-base-storage": "^1.0.0-0",
    "@worldsibu/convector-controller": "^1.0.0-0",
    "@worldsibu/convector-stub-storage": "^1.0.0-0",
    "mocha": "^5.0.3",
    "npm-scripts-watcher": "^1.0.2",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.3",
    "tslint": "^5.9.1",
    "typescript": "2.8.3"
  }
}
