{
  "private": true,
  "name": "tellus",
  "version": "0.0.1",
  "description": "Tellus Monorepo",
  "author": "Word Sibu",
  "license": "ISC",
  "scripts": {
    "================= Life cycle =================": "==================================",
    "start": "npm-run-all -s docker:up channel:create channel:join register:user register:admin 'cc:install 1'",
    "restart": "npm-run-all -s docker:teardown register:clean start",
    "================= Docker =================": "==================================",
    "docker:up": "COMPOSE_PROJECT_NAME=net docker-compose -f ./env/docker-compose.yml up -d ca.example.com orderer.example.com peer0.org1.example.com couchdb",
    "postdocker:up": "sleep 20",
    "docker:stop": "docker stop $(docker ps -a -q)",
    "docker:rm": "docker rm -f $(docker ps -a | awk '$2~/hyperledger/ {print $1}') $(docker ps -a | awk '{print $15}' | grep \"^dev-peer\")",
    "docker:clean": "docker rmi -f $(docker images | grep \"^dev-peer\" | awk '{print $3}')",
    "docker:teardown": "npm-run-all -s docker:stop docker:rm docker:clean",
    "docker:restart": "npm-run-all -s docker:teardown docker:up",
    "================= Channel =================": "==================================",
    "channel:create": "docker exec peer0.org1.example.com peer channel create -o orderer.example.com:7050 -c mychannel -f /etc/hyperledger/configtx/channel.tx",
    "channel:join": "docker exec peer0.org1.example.com peer channel join -b mychannel.block",
    "================= Users =================": "==================================",
    "register:clean": "rimraf ./env/.hfc-key-store",
    "register:admin": "node ./env/registerAdmin.js",
    "register:user": "node ./env/registerUser.js",
    "================= Chaincodes =================": "==================================",
    "cc:install": "chaincode-manager --config ./env/chaincode.config.json install tellus",
    "cc:upgrade": "chaincode-manager --config ./env/chaincode.config.json upgrade tellus",
    "cc:invoke": "chaincode-manager --config ./env/chaincode.config.json invoke tellus"
  },
  "devDependencies": {
    "@theledger/fabric-mock-stub": "^1.0.1",
    "@theledger/fabric-shim-crypto-types": "^1.0.4",
    "@theledger/fabric-shim-types": "^1.0.6",
    "@types/bytebuffer": "^5.0.37",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^10.1.2",
    "@types/uuid": "^3.4.3",
    "@types/yup": "^0.24.4",
    "@worldsibu/chaincode-manager": "^1.2.13",
    "chai": "^4.1.2",
    "fabric-ca-client": "^1.1.2",
    "fabric-client": "^1.1.2",
    "grpc": "^1.11.3",
    "lerna": "^2.11.0",
    "npm-run-all": "^4.1.3",
    "uuid": "^3.2.1"
  }
}
